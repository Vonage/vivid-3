{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom", "dom.iterable"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@vivid-nx/cem-analyzer-plugins": [
				"libs/cem-analyzer-plugins/src/index.ts"
			],
			"@vivid-nx/shared": ["libs/shared/src/index.ts"],
			"@vivid-nx/styles": ["libs/styles/src/index.ts"],
			"@vivid-nx/tokens": ["libs/tokens/src/index.ts"],
			"@vivid-nx/wrapper-gen": ["libs/wrapper-gen/src/index.ts"],
			"@vonage/eslint-plugin-vivid": ["libs/eslint-plugin/src/index.ts"],
			"@vonage/nx-vivid": ["libs/nx-vivid/src/index.ts"],
			"@vonage/vivid": ["libs/components/src/index.ts"],
			"@vonage/vivid-vue": ["libs/vue-wrappers/src/index.ts"],
			"@vonage/vivid/locales/de-DE": ["libs/components/src/locales/de-DE.ts"],
			"@vonage/vivid/locales/en-GB": ["libs/components/src/locales/en-GB.ts"],
			"@vonage/vivid/locales/en-US": ["libs/components/src/locales/en-US.ts"],
			"@vonage/vivid/locales/ja-JP": ["libs/components/src/locales/ja-JP.ts"],
			"@vonage/vivid/locales/zh-CN": ["libs/components/src/locales/zh-CN.ts"],
			"@vonage/vwc-consts": ["libs/consts/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
