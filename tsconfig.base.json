{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vivid-nx/shared": [
        "libs/shared/src/index.ts"
      ],
      "@vivid-nx/styles": [
        "libs/styles/src/index.ts"
      ],
      "@vivid-nx/tokens": [
        "libs/tokens/src/index.ts"
      ],
      "@vonage/nx-vivid": [
        "libs/nx-vivid/src/index.ts"
      ],
      "@vonage/vivid": [
        "libs/components/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
