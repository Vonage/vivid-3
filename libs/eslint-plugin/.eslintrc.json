{
	"extends": ["../../.eslintrc.json", "prettier"],
	"ignorePatterns": ["!**/*"],
	"rules": {
		"@typescript-eslint/no-non-null-assertion": "off"
	},
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {}
		},
		{
			"files": ["*.json"],
			"parser": "jsonc-eslint-parser",
			"rules": {
				"@nx/dependency-checks": [
					"error",
					{
						"ignoredFiles": ["{projectRoot}/vite.config.{js,ts,mjs,mts}"]
					}
				]
			}
		}
	]
}
