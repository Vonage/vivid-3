{
	"name": "@repo/shared",
	"private": true,
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./utils": {
			"sass": "./src/lib/sass/utils/index.scss"
		},
		"./mixins/appearance": {
			"sass": "./src/lib/sass/mixins/appearance/index.scss"
		},
		"./mixins/connotation": {
			"sass": "./src/lib/sass/mixins/connotation/index.scss"
		},
		"./mixins/elevation": {
			"sass": "./src/lib/sass/mixins/elevation/index.scss"
