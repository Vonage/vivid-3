{
	"name": "@vonage/vivid-vue",
	"version": "4.30.0",
	"description": "A Vue wrapper library for Vivid components.",
	"author": "Vonage",
	"license": "ISC",
	"type": "module",
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"web-types": "./web-types.json",
	"files": [
		"dist",
		"web-types.json"
	],
	"scripts": {
		"prebuild": "tsx scripts/codegen.ts",
		"build": "vite build",
		"postbuild": "tsc --emitDeclarationOnly && tsx scripts/buildTypings.ts",
		"lint": "eslint . --max-warnings=0",
		"lint:fix": "eslint . --max-warnings=0 --fix",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.tools.json",
		"prepack": "tsx scripts/updateDependencyVersion.ts"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"peerDependencies": {
		"vue": "^2.7.0 || >=3.0.0"
	},
	"dependencies": {
		"@vonage/vivid": "*"
	},
	"devDependencies": {
		"@repo/wrapper-gen": "*",
		"@repo/typescript-config": "*",
		"@repo/eslint-config": "*",
		"@repo/vitest-config": "*",
		"@repo/styles": "*"
	}
}
