{
	"name": "@vonage/vivid",
	"version": "5.5.0",
	"homepage": "https://vivid.deno.dev",
	"bugs": {
		"url": "https://github.com/Vonage/vivid-3/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vonage/vivid-3",
		"directory": "libs/components"
	},
	"license": "Apache-2.0",
	"sideEffects": [
		"./dist/*/index.js",
		"./dist/*/index.cjs",
		"*.css"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./*": {
			"types": "./dist/*/index.d.ts",
			"import": "./dist/*/index.js",
			"require": "./dist/*/index.cjs"
		},
		"./locales/*": {
			"types": "./dist/locales/*.d.ts",
			"import": "./dist/locales/*.js",
			"require": "./dist/locales/*.cjs"
		},
		"./*.css": "./dist/*.css"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"scripts": {
		"prebuild": "cem analyze --config ./cem.config.mjs",
		"build": "vite build && vite build -c ./vite.config.bundled.ts",
		"postbuild": "api-extractor run -c ./dist/api-extractor.json && move-manifest-to-dist .",
		"dev": "WATCH_MODE=true vite build -w -c ./vite.config.ts",
		"dev:bundled": "WATCH_MODE=true vite build -w -c ./vite.config.bundled.ts",
		"e2e": "playwright test",
		"e2e:docker": "PW_TEST_CONNECT_WS_ENDPOINT=ws://0.0.0.0:3000/ playwright test",
		"e2e:docker:ui": "PW_TEST_CONNECT_WS_ENDPOINT=ws://0.0.0.0:3000/ playwright test --ui",
		"e2e:ui": "playwright test --ui",
		"lint": "eslint . --max-warnings=0",
		"lint:fix": "eslint . --max-warnings=0 --fix",
		"stylelint": "stylelint 'src/**/*.{css,scss}'",
		"stylelint:fix": "stylelint 'src/**/*.{css,scss}' --fix",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.13",
		"@microsoft/fast-element": "catalog:",
		"@microsoft/fast-web-utilities": "catalog:",
		"date-fns": "^3.0.0",
		"dompurify": "^3.3.0",
		"prosemirror-commands": "^1.7.1",
		"prosemirror-dropcursor": "^1.8.2",
		"prosemirror-gapcursor": "^1.3.2",
		"prosemirror-history": "^1.4.1",
		"prosemirror-keymap": "^1.2.3",
		"prosemirror-model": "^1.25.4",
		"prosemirror-schema-basic": "^1.2.3",
		"prosemirror-state": "^1.4.4",
		"prosemirror-transform": "^1.10.5",
		"prosemirror-view": "^1.40.1",
		"ramda": "^0.32.0",
		"uuid": "^11.1.0",
		"vanilla-colorful": "^0.7.2"
	},
	"devDependencies": {
		"@custom-elements-manifest/analyzer": "catalog:",
		"@microsoft/api-extractor": "^7.55.0",
		"@microsoft/eslint-config-fast-dna": "catalog:",
		"@playwright/test": "catalog:",
		"@repo/cem-analyzer-plugins": "workspace:*",
		"@repo/consts": "workspace:*",
		"@repo/eslint-config": "workspace:*",
		"@repo/eslint-plugin-repo": "workspace:*",
		"@repo/shared": "workspace:*",
		"@repo/stylelint-config": "workspace:*",
		"@repo/styles": "workspace:*",
		"@repo/tokens": "workspace:*",
		"@repo/tools": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@repo/vitest-config": "workspace:*",
		"@testing-library/dom": "^8.20.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/jsdom": "catalog:",
		"@types/markdown-it": "catalog:",
		"@types/node": "catalog:",
		"@types/ramda": "^0.30.2",
		"@types/uuid": "^10.0.0",
		"cem-plugin-async-function": "catalog:",
		"cem-plugin-jsdoc-example": "catalog:",
		"cem-plugin-jsdoc-function": "catalog:",
		"cem-plugin-readonly": "catalog:",
		"concurrently": "^9.2.1",
		"dialog-polyfill": "^0.5.6",
		"element-internals-polyfill": "^1.3.13",
		"http-server": "^14.1.1",
		"jsdom": "catalog:",
		"markdown-it": "catalog:",
		"playwright": "catalog:",
		"sass": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"video.js": "^8.23.4",
		"vite": "catalog:",
		"vite-plugin-dts": "catalog:",
		"vite-plugin-static-copy": "catalog:",
		"vitest": "catalog:",
		"vitest-axe": "catalog:",
		"vitest-fetch-mock": "catalog:",
		"wait-on": "^8.0.5"
	},
	"customElements": "custom-elements.json"
}
