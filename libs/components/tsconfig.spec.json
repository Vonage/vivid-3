{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"],
    "allowJs": true,
		"allowImportingTsExtensions": true,
		"noEmit": false,
		"verbatimModuleSyntax": false,
		"target": "ES6"
  },
  "exclude": [
    "**/*.config.spec.ts",
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
