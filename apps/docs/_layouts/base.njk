<!DOCTYPE html>
<html lang="en" data-vvd-context="none">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vivid</title>
    <link rel="icon" href="{{ '/assets/images/vivid-logo.svg' | url }}" type="image/svg+xml">

    <!-- Load fonts -->
    <link rel="preload" href="https://fonts.resources.vonage.com/fonts/v1/Spezia_Web_Complete_Upright.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="stylesheet" href="{{ '/assets/styles/fonts/spezia.css' | url }}">

    <!-- Load styles inline -->
    {% set highlightCss %}
      {% include "../../../node_modules/highlight.js/styles/github.css" %}
    {% endset %}

    {% set mainCss %}
      {% include "../assets/styles/main.css" %}
    {% endset %}

    <style>
      {{ highlightCss | cssmin | safe }}
      {{ mainCss | cssmin | safe }}
    </style>

    <link rel="stylesheet" href="{{ '/assets/styles/themes/light.css' | url }}" media="(prefers-color-scheme: light)">
    <link rel="stylesheet" href="{{ '/assets/styles/themes/dark.css' | url }}" media="(prefers-color-scheme: dark)">

    <script type="module" src="https://unpkg.com/dark-mode-toggle"></script>

    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>

    <script src="{{ '/assets/scripts/main.js' | url }}"></script>

    <script type="module" src="{{ '/assets/modules/components/layout/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/text/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/side-drawer/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/sidenav-item/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/button/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/icon/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/card/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/header/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/action-group/index.js' | url}}"></script>

    {% include "prefetches.njk" %}
  </head>

<body>
	<vwc-header>
    <vwc-layout column-spacing="small" style="--layout-grid-template-columns: 30px 1fr">
      <img src="../../../vivid-logo.svg" alt="image of Vivid Logo" style="width: 30px">
      <vwc-text font-face="subtitle-1" tight>Vivid</vwc-text>
    </vwc-layout>

    <div class="star-us" slot="actionItems">
    <!-- Place this tag where you want the button to render. -->
      <a class="github-button"
        href="https://github.com/vonage/vivid-3"
        data-color-scheme="no-preference: light; light: light; dark: dark;"
        data-size="large"
        data-show-count="true"
        aria-label="Star vonage/vivid-3 on GitHub">
        Star
      </a>
    </div>

    <dark-mode-toggle permanent slot="actionItems"></dark-mode-toggle>

    <vwc-side-drawer open slot="app-content">
      {% include "navigation.njk" %}
      <main slot="app-content">
        <vwc-layout gutters="large" column-basis="block" class="main-layout">
          <article>
            {{content | safe}}
          </article>
        </vwc-layout>
      </main>
    </vwc-side-drawer>
	</vwc-header>

</body>

</html>
