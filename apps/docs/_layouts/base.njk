<!DOCTYPE html>
<html lang="en" class="vvd-typography">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Vivid</title>
    <link rel="icon" href="{{ '/assets/images/vivid-logo.svg' | url }}" type="image/svg+xml">

    <!-- Load fonts -->
    <link rel="preload" href="https://fonts.resources.vonage.com/fonts/v1/Spezia_Web_Complete_Upright.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="https://fonts.resources.vonage.com/fonts/v1/Spezia_Web_Monospace_Complete.woff2" as="font" type="font/woff2" crossorigin>

    <link rel="stylesheet" href="{{ '/assets/styles/fonts/spezia.css' | url }}">

    <!-- Load styles inline -->
    {% set highlightCss %}
      {% include "../../../node_modules/highlight.js/styles/github.css" %}
    {% endset %}

    {% set mainCss %}
      {% include "../assets/styles/main.css" %}
    {% endset %}

    <style>
      {{ highlightCss | cssmin | safe }}
      {{ mainCss | cssmin | safe }}
    </style>

    {% set mainJs %}
      {% include "../assets/scripts/main.js" %}
    {% endset %}

    <script>
      {{ mainJs | safe }}
    </script>

    {% set viewportHandler %}
      {% include "../assets/scripts/viewport-handler.js" %}
    {% endset %}

    <script type="module">
      {{ viewportHandler | safe }}
    </script>

    {% set scrollHandler %}
      {% include "../assets/scripts/scroll-handler.js" %}
    {% endset %}

    <script type="module">
      {{ scrollHandler | safe }}
    </script>

    <link rel="stylesheet" href="{{ '/assets/styles/themes/light.css' | url }}" media="(prefers-color-scheme: light)">
    <link rel="stylesheet" href="{{ '/assets/styles/themes/dark.css' | url }}" media="(prefers-color-scheme: dark)">

    <link rel="stylesheet" href="{{ '/assets/styles/typography/desktop.css' | url }}">

		<script type="module" src="https://unpkg.com/dark-mode-toggle"></script>

    <script type="module" src="{{ '/assets/modules/components/layout/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/side-drawer/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/nav/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/nav-item/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/nav-disclosure/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/button/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/fab/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/icon/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/card/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/header/index.js' | url}}"></script>
    <script type="module" src="{{ '/assets/modules/components/action-group/index.js' | url}}"></script>

    {% include "prefetches.njk" %}
  </head>

<body>
<vwc-header id="header-main" slot="app-content">
     <div class="header-content-wrapper">
          <vwc-button id="hamburger-button" connotation="accent" icon='collapse-solid' density='condensed' id="menu-button" aria-label="Menu" onclick="toggleSideDrawerButton()" class="menu-button"></vwc-button>
          <a class="logo-wrapper" href="/" alt="Vivid Web Components">
           <img src="/assets/images/vivid-logo.svg" alt="Vivid Logo" style="width: 32px">
            <strong>VIVID Web Components</strong>
          </a>
    </div>
    <dark-mode-toggle	slot="action-items" appearance="toggle" permanent></dark-mode-toggle>
    <vwc-nav-item slot="action-items" icon="github-mono" href="https://github.com/vonage/vivid-3" aria-label="View on GitHub" role="navigation"></vwc-nav-item>

  <vwc-side-drawer id="sidedrawer" open slot="app-content">
    <vwc-layout gutters="small" column-basis="block">
      {% include "navigation.njk" %}
    </vwc-layout>

      <main slot="app-content">
        <vwc-layout column-basis="block" class="main-layout">
          <article class="article">
            {{content | safe}}
          </article>
        </vwc-layout>
      </main>
  </vwc-side-drawer>
</vwc-header>

</body>

</html>
