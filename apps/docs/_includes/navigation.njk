{% block content %}
{% set componentsFilter %}
	{% include "../assets/scripts/components.filter.js" %}
{% endset %}
<vwc-nav>
	<vwc-text-field class="components-filter" icon="search-line" placeholder="Find Component" label="Filter Components"></vwc-text-field>
  <script>
		{{ componentsFilter | safe }}
	</script>
	<vwc-nav-disclosure label="Getting Started" open>
		{%  for item in introduction %}
		<vwc-nav-item
			href="{{ ('/getting-started/' + item.title) | url }}"
			text="{{ item.title | replace("-", " ") | capitalize }}"
			{% if ('/getting-started/' + item.title + '/') == page.url %}aria-current="page"{% endif %}></vwc-nav-item>
		{% endfor %}
	</vwc-nav-disclosure>

  <vwc-nav-disclosure label="Design System" open>
    {%  for item in designs | publicPageFilter | sort(false, false, 'title') %}
    <vwc-nav-item
			href="{{ ('/designs/' + item.title) | url }}"
			text="{{ item.title | replace("-", " ") | capitalize }}"
			{% if ('/designs/' + item.title + '/') == page.url %}aria-current="page"{% endif %}>
				{% if (item.status) == "underlying" %}<vwc-badge slot="meta" icon="lock-line" appearance="subtle" shape="pill" connotation="alert"></vwc-badge>{% endif %}"
		</vwc-nav-item>
    {% endfor %}
  </vwc-nav-disclosure>

  <vwc-nav-disclosure label="Components" open>
    {%  for item in components | publicPageFilter | sort(false, false, 'title') %}
    <vwc-nav-item
			href="{{ ('/components/' + item.title) | url }}"
			text="{{ item.title | replace("-", " ") | capitalize }}"
			{% if ('/components/' + item.title + '/') == page.url %}aria-current="page"{% endif %}>
				{% if (item.status) == "alpha" %}<vwc-badge slot="meta" text="alpha" appearance="subtle" shape="pill" connotation="warning"></vwc-badge>{% endif %}
				{% if (item.status) == "underlying" %}<vwc-badge slot="meta" icon="lock-line" appearance="subtle" shape="pill" connotation="alert"></vwc-badge>{% endif %}"
		</vwc-nav-item>
    {% endfor %}
  </vwc-nav-disclosure>
</vwc-nav>
{% endblock %}
