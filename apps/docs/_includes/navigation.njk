{% block content %}
<vwc-sidenav>
  <vwc-sidenav-disclosure label="Design System" open>
    {%  for item in designs | sort(false, false, 'title') %}
    <vwc-sidenav-item href="{{ ('/designs/' + item.title) | url }}" text="{{ item.title | replace("-", " ") | capitalize }}" id="nav-{{ item.title }}"></vwc-sidenav-item>
    {% endfor %}
  </vwc-sidenav-disclosure>

  <vwc-sidenav-disclosure label="Components" open>
    {%  for item in components | sort(false, false, 'title') %}
    <vwc-sidenav-item href="{{ ('/components/' + item.title) | url }}" text="{{ item.title | replace("-", " ") | capitalize }}" id="nav-{{ item.title }}"></vwc-sidenav-item>
    {% endfor %}
  </vwc-sidenav-disclosure>
</vwc-sidenav>
{% endblock %}
