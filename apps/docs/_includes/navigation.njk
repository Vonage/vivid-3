{% block content %}
<vwc-nav>
  <vwc-nav-disclosure label="Design System" {% if 'designs' in page.url %}open="true"{% endif %}>
    {%  for item in designs | sort(false, false, 'title') %}
    <vwc-nav-item href="{{ ('/designs/' + item.title) | url }}" id="nav-{{ item.title }}" text="{{ item.title | replace("-", " ") | capitalize }}" {% if ('/designs/' + item.title + '/') == page.url %}aria-current="page"{% endif %}></vwc-nav-item>
    {% endfor %}
  </vwc-nav-disclosure>

  <vwc-nav-disclosure label="Components" {% if 'components' in page.url %}open="true"{% endif %} open>
    {%  for item in components | sort(false, false, 'title') %}
    <vwc-nav-item href="{{ ('/components/' + item.title) | url }}" id="nav-{{ item.title }}" text="{{ item.title | replace("-", " ") | capitalize }}" {% if ('/components/' + item.title + '/') == page.url %}aria-current="page"{% endif %}></vwc-nav-item>
    {% endfor %}
  </vwc-nav-disclosure>
</vwc-nav>
{% endblock %}
