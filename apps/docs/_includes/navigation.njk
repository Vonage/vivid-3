{% block content %}
<vwc-sidenav>
  <vwc-sidenav-disclosure label="Getting Started">
    {%  for item in guides | sort(false, false, 'title') %}
    <vwc-sidenav-item href="{{ ('/guides/' + item.title) | url }}" text="{{ item.title | replace("-", " ") | capitalize }}"></vwc-sidenav-item>
    {% endfor %}
  </vwc-sidenav-disclosure>

  <vwc-sidenav-disclosure label="Design System">
    {%  for item in designs | sort(false, false, 'title') %}
    <vwc-sidenav-item href="{{ ('/designs/' + item.title) | url }}" text="{{ item.title | replace("-", " ") | capitalize }}"></vwc-sidenav-item>
    {% endfor %}
  </vwc-sidenav-disclosure>

  <vwc-sidenav-disclosure label="Components" open>
    {%  for item in components | sort(false, false, 'title') %}
    <vwc-sidenav-item href="{{ ('/components/' + item.title) | url }}" text="{{ item.title | replace("-", " ") | capitalize }}"></vwc-sidenav-item>
    {% endfor %}
  </vwc-sidenav-disclosure>
</vwc-sidenav>
{% endblock %}
