{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/vivid-demo/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
	    "dependsOn": ["package"],
      "options": {
        "pathprefix": "",
        "commands": [
            "npx eleventy --config=./apps/docs/.eleventy.js",
            "npx rollup ./apps/docs/assets/scripts/live-sample.js -f esm -o ./dist/apps/docs/assets/scripts/live-sample.bundle.js -p @rollup/plugin-node-resolve"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx rollup ./apps/docs/assets/scripts/live-sample.js -f esm -o ./dist/apps/docs/assets/scripts/live-sample.bundle.js -p @rollup/plugin-node-resolve",
          "npx eleventy --config=./apps/docs/.eleventy.js --serve & npx nx serve styles & npx nx build components --watch"
        ],
        "parallel": false
      }
    }
  },
  "implicitDependencies": ["components", "styles"]
}
