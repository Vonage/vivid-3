{
	"name": "@repo/docs",
	"private": true,
	"scripts": {
		"prebuild": "rm -rf .11ty-vite dist",
		"build": "eleventy",
		"postbuild": "pagefind --site dist",
		"predev": "rm -rf .11ty-vite dist",
		"dev": "eleventy --serve",
		"lint": "eslint . --max-warnings=0",
		"lint:fix": "eslint . --max-warnings=0 --fix",
		"stylelint": "stylelint 'assets/**/*.{css,scss}'",
		"stylelint:fix": "stylelint 'assets/**/*.{css,scss}' --fix",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui",
		"e2e:docker": "PW_TEST_CONNECT_WS_ENDPOINT=ws://0.0.0.0:3000/ playwright test",
		"e2e:docker:ui": "PW_TEST_CONNECT_WS_ENDPOINT=ws://0.0.0.0:3000/ playwright test --ui",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@microsoft/fast-element": "^2.7.0",
		"@microsoft/fast-web-utilities": "^6.0.0",
		"@repo/consts": "*",
		"@repo/styles": "*",
		"@vonage/vivid": "*",
		"@vonage/vivid-test-utils": "*",
		"@vonage/vivid-vue": "*",
		"lodash": "^4.17.21",
		"ramda": "^0.30.0"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-navigation": "^1.0.4",
		"@11ty/eleventy-plugin-vite": "^5.0.2",
		"@codemirror/lang-html": "^6.4.1",
		"@codemirror/language": "^6.0.2",
		"@codemirror/state": "^6.0.2",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.0.2",
		"@playwright/test": "1.48.2",
		"@repo/eslint-config": "*",
		"@repo/shared": "*",
		"@repo/stylelint-config": "*",
		"@repo/typescript-config": "*",
		"@repo/vitest-config": "*",
		"@types/jsdom": "^21.1.7",
		"@types/markdown-it": "^12.2.3",
		"@types/markdown-table": "^2.0.0",
		"@types/node-fetch": "^2.6.12",
		"@types/ramda": "^0.30.2",
		"@vitejs/plugin-vue": "^5.2.1",
		"clean-css": "^5.3.3",
		"codemirror": "^6.0.2",
		"eleventy-plugin-nesting-toc": "^1.3.0",
		"glob": "^7.2.0",
		"highlight.js": "^11.11.1",
		"htmx.org": "^1.9.12",
		"http-server": "^14.1.0",
		"jsdom": "^23.0.0",
		"markdown-it": "^13.0.2",
		"markdown-it-anchor": "^8.6.4",
		"pagefind": "^1.3.0",
		"sass": "^1.89.2",
