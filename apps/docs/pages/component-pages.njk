---
tags: components
pagination:
    data: components
    size: 1
    alias: component
permalink: "components/{{ component.title | slug }}/"
---

{% extends '../_layouts/base.njk' %}


{% if (component.status == "alpha") or (component.status == 'underlying') %}


	{% block banner %}
		{% if (component.status == "alpha") %}
			<vwc-banner class="banner" text="Alpha: this is the initial phase of component testing. Expect breaking changes." connotation="warning"></vwc-banner>
		{% endif %}
		{% if (component.status == "underlying") %}
			<vwc-banner class="banner" text="Underlying: this component is only used by other components and not intended to be used by authors outside the Vivid team" connotation="information"></vwc-banner>
		{% endif %}
	{% endblock %}
{% endif %}


{% block content %}
	{% renderFile component.markdown %}
{% endblock %}

{% block footer %}
	<footer class="footer">
		<vwc-divider></vwc-divider>
  	<a href="{{ component.markdown | githubEditLink }}"><vwc-icon name="edit-line"></vwc-icon> Edit this page on GitHub</a>
  </footer>
{% endblock %}
