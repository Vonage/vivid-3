{
  "name": "vivid",
  "version": "3.0.0",
  "description": "Vonage's web UI ðŸŽ¨ toolbelt",
  "scripts": {
    "start": "npm run build:components -- --watch & npm run build:tokens -- --watch & npm run docs:serve",
    "docs:serve": "eleventy --config=./apps/11ty/.eleventy.js --serve",
    "docs:build": "eleventy --config=./apps/11ty/.eleventy.js",
    "build:tokens": "sass src/core/theme:dist/core/theme",
    "build:components": "rollup -c config/rollup/rollup.config.prod.ts",
    "build": "npm run build:components && npm run build:tokens",
    "test:dev": "karma start config/karma/karma.conf.dev.ts --browsers=Chrome",
    "test:chrome": "karma start config/karma/karma.conf.prod.ts --coverage --browsers=ChromeHeadless",
    "test:firefox": "karma start config/karma/karma.conf.prod.ts --coverage --browsers=FirefoxHeadless",
    "test:safari": "karma start config/karma/karma.conf.prod.ts --coverage --browsers=SafariNative",
    "clean:git": "git clean -dfx",
    "clean": "npm run clean:git",
    "ui-tests": "./scripts/visual-tests/run.tests.in.container.sh",
    "ui-tests:update": "npm run ui-tests -- update",
    "ui-tests:build": "./scripts/visual-tests/build.image.sh",
    "ui-tests:local": "http-server -s & playwright test",
    "lint:css": "stylelint **/*.scss --quiet --ignore-path .gitignore",
    "lint:es": "eslint 'src/**/*.ts' --quiet --ignore-path .gitignore",
    "lint": "npm run lint:es & npm run lint:css",
    "lint:fix": "npm run lint:es -- --fix & npm run lint:css -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vonage/vivid-next.git"
  },
  "keywords": [
    "design system",
    "web components",
    "UI",
    "a11y"
  ],
  "author": "vonage/vivid",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Vonage/vivid-next/issues"
  },
  "homepage": "https://github.com/Vonage/vivid-next#readme",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "./button": "./dist/components/button/button.js",
    "./icon": "./dist/components/icon/icon.js"
  },
