    "@rollup/pluginutils": "^4.1.1",
    "@types/jasmine": "^3.10.2",
    "@types/karma": "^6.3.1",
    "@types/node": "^16.11.7",
    "@types/ramda": "^0.27.46",
    "@types/sass": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
