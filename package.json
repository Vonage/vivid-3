    "test:firefox": "karma start config/karma/karma.conf.prod.cjs --coverage --browsers=FirefoxHeadless",
    "test:safari": "karma start config/karma/karma.conf.prod.cjs --coverage --browsers=SafariNative",
    "clean:git": "git clean -dfx",
    "clean": "npm run clean:git"
  },
  "repository": {
