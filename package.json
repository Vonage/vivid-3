{
	"name": "vivid-nx",
	"version": "0.0.0",
	"private": true,
	"repository": "github:Vonage/vivid-3",
	"license": "MIT",
	"scripts": {
		"build": "turbo run build",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "turbo run lint stylelint",
		"lint:fix": "turbo run lint:fix stylelint:fix",
		"start": "turbo run dev --filter=@repo/docs --filter=@vonage/vivid --filter=@repo/styles",
		"test": "turbo run test:coverage && istanbul-merge ./libs/*/coverage/coverage-final.json ./apps/*/coverage/coverage-final.json --out /dev/stdout | istanbul report --include /dev/stdin --dir coverage html lcov",
		"test:ui": "npx turbo run @vonage/vivid#e2e:docker:ui",
		"typecheck": "turbo run typecheck"
	},
	"devDependencies": {
		"@types/eslint": "catalog:",
		"@typescript-eslint/eslint-plugin": "catalog:",
		"@typescript-eslint/parser": "catalog:",
		"@typescript-eslint/utils": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"@vitest/ui": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"eslint-plugin-ban": "catalog:",
		"eslint-plugin-compat": "catalog:",
		"eslint-plugin-import": "catalog:",
		"eslint-plugin-tsdoc": "catalog:",
		"eslint-plugin-unused-imports": "catalog:",
		"eslint-plugin-vue": "catalog:",
		"istanbul": "catalog:",
		"istanbul-merge": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"stylelint": "catalog:",
		"turbo": "^2.6.1",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vite-plugin-dts": "catalog:"
	},
	"packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
